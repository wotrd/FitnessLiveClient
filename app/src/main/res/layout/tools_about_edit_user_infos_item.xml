<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#767070"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_height="wrap_content"
        android:id="@+id/tools_user_sex_edit_pop_layout"
        android:gravity="center"
        android:orientation="vertical" >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorToolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="取消"
                android:textSize="20dp"
                android:textColor="#bfb7b7"
                android:id="@+id/tools_user_info_edit_cancel_text_view"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="修改昵称"
                android:id="@+id/tools_user_info_edit_content_text_view"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tools_user_info_edit_confirm_text_view"
                android:layout_marginTop="8dp"
                android:layout_gravity="right"
                android:text="确定"
                android:textSize="20dp"
                android:textColor="#f2f4f5"
                android:layout_marginRight="10dp"
                >
            </TextView>
        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="#ccc"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2ebeb"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/tools_user_sex_edit_man_select_linearlayout"
            android:orientation="horizontal"
            android:background="@color/color_white"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tools_user_info_edit_text"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:textSize="23dp"
                />
            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/tools_user_info_edit_clear"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:visibility="visible"
                android:src="@mipmap/ic_close_live_icon"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f6f5f5f5"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2ebeb"
            />
    </LinearLayout>
</LinearLayout>

