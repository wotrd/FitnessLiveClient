<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wkj_pc.fitnesslive.activity.PreparedLiveActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prepared_live_user_back_image_view"
            android:src="@mipmap/icon_about_us_finish_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="用户直播"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_gravity="right"
            android:id="@+id/prepared_live_set_to_live_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="准备"
            android:textSize="24sp"
            />
    </android.support.v7.widget.Toolbar>
    <!--用户直播主题设置-->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#f5f5f5"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="40dp">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:background="@null"
            android:id="@+id/prepared_live_theme_edit_text"
            android:layout_marginLeft="20dp"
            android:hint="请输入直播风格"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="24sp"
            android:background="#8edeed"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:id="@+id/prepared_live_theme_append_button"
            android:layout_height="wrap_content"
            android:text="添加"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/prepared_live_theme_edit_show_recycler_view"
        android:layout_height="120dp">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:textColor="#8ec7ca"
        android:layout_marginLeft="5dp"
        android:id="@+id/prepared_live_big_img_set_text_view"
        android:text="点击设置直播大图"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/prepared_live_big_img_set_img_view"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/lunbo2"
        />

</LinearLayout>
