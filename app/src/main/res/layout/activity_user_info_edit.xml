<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wkj_pc.fitnesslive.fragment.AboutUsFragment">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorToolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about_user_info_edit_back_text_view"
            android:src="@mipmap/icon_about_us_finish_img"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="编辑资料"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/about_user_edit_amatar_linearlayout"
        android:layout_height="100dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:textColor="#231919"
            android:text="头像"
            android:textSize="22sp"
            />
        <de.hdodenhof.circleimageview.CircleImageView

            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:id="@+id/about_user_edit_amatar_img_view"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_amatar_img"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#ccc"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/about_user_edit_account_linearlayout"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#231919"
            android:text="账号"
            android:textSize="22sp"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textSize="22sp"
            android:layout_height="wrap_content"
            android:textColor="#ccc"
            android:id="@+id/about_user_edit_user_account_text_view"
            android:text=""
            android:layout_marginRight="15dp"
            android:gravity="right"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#ccc"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/about_user_edit_nickname_linearlayout"
        android:layout_height="50dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#231919"
            android:text="昵称"
            android:textSize="22sp"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:textSize="22sp"
            android:textColor="#ccc"
            android:id="@+id/about_user_edit_nickname_text_view"
            android:layout_height="wrap_content"
            android:text=" >"
            android:layout_marginRight="15dp"
            android:gravity="right"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#ccc"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/about_user_edit_sex_linearlayout"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="#231919"
            android:text="性别"
            android:textSize="22sp"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="22sp"
            android:textColor="#ccc"
            android:id="@+id/about_user_edit_sex_text_view"
            android:layout_height="wrap_content"
            android:text="男 >"
            android:layout_marginRight="15dp"
            android:gravity="right"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="#ccc"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/about_user_edit_person_sign_linearlayout"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:textColor="#231919"
            android:text="个性签名"
            android:textSize="22sp"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="wrap_content"
            android:id="@+id/about_user_edit_person_sign_text_view"
            android:textColor="#ccc"
            android:ellipsize="end"
            android:textSize="22sp"
            android:text=">"
            android:layout_marginRight="15dp"
            android:gravity="right"
            />
    </LinearLayout>

</LinearLayout>
