<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="150dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_prepared_live_theme_edit_bc_img"
        android:layout_height="50dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent"
            android:text="性感"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#545356"
            android:id="@+id/prepared_live_theme_edit_text_view"
            />
        <ImageView
            android:layout_width="0dp"
            android:id="@+id/prepared_live_theme_edit_destroy_img_view"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_live_theme_edit_text_close_img"
            />
    </LinearLayout>

</LinearLayout>