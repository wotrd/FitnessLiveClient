<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/activity_home_search_user_item_linearlayout"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:id="@+id/activity_home_search_user_item_logo_image_view"
        android:src="@mipmap/ic_amatar_img"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ccc"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="4"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="1000001"
                    android:id="@+id/activity_home_search_user_item_account"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/activity_home_search_user_item_personalsign"
                    android:text="..."
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/activity_home_search_user_item_add_attention_image_view"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@mipmap/icon_home_search_attention"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>