<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:id="@+id/login_toolbar"
            android:background="@color/colorWhite"
            android:backgroundTintMode="add"
            android:layout_height="?attr/actionBarSize">
        </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:src="@drawable/login_logo" />
    </LinearLayout>
    <!--账户-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/account_linearlayout"
                android:background="@drawable/shape_nostroke_bg_btn"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="2"
                    android:src="@mipmap/ic_account_img"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="|"
                    android:textSize="20sp"
                    />
                <EditText
                    android:id="@+id/user_login_mobile_num_edit_text"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:layout_height="38sp"
                    android:layout_weight="8"
                    android:background="@null"
                    android:ellipsize="end"
                    android:inputType="number"
                    android:maxLength="11"
                    android:hint="手机号"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>
        <!--密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:orientation="vertical">
            android:paddingTop="15dp"
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/password_linearlayout"
                android:background="@drawable/shape_nostroke_bg_btn"
                android:gravity="center">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight="2"
                    android:src="@mipmap/ic_password_img"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="|"
                    android:textSize="20sp"
                    />
                <EditText
                    android:id="@+id/edit_password"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:layout_height="38dp"
                    android:layout_weight="8"
                    android:background="@null"
                    android:ellipsize="end"
                    android:inputType="textPassword"
                    android:hint="密码"
                    android:maxLength="20"
                    android:maxLines="1" />
            </LinearLayout>
        </LinearLayout>
        <!--findPassword -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"
                    android:onClick="forgetPassword"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorStroke"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--登录按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="300dp"
                android:background="@drawable/shape_all_stroke_bg_btn"
                android:gravity="center"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="260dp"
                    android:layout_height="38dp"
                    android:background="@null"
                    android:text="@string/app_login"
                    android:onClick="toLogin"
                    android:textSize="24sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--注册按钮-->
        <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="15dp"
            android:gravity="center"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="300dp"
            android:background="@drawable/shape_nostroke_bg_btn"
            android:gravity="center"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="260dp"
                android:layout_height="38dp"
                android:background="@null"
                android:text="@string/app_register"
                android:onClick="toRegister"
                android:textSize="24sp"
                />
          </LinearLayout>
        </LinearLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/open_slide_select_login_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/open_slide_login_btn" />
        <!--滑出视图-->
        <LinearLayout
            android:id="@+id/show_slide_out_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/close_select_slide_btn"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/open_slide_login_btn" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/qq_login_view"
                    android:layout_width="50dp"
                    android:padding="5dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="70dp"
                    android:onClick="qqLogin"
                    android:src="@drawable/qq_login_btn" />
                <ImageView
                    android:id="@+id/wechat_login_view"
                    android:layout_width="50dp"
                    android:padding="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="50dp"
                    android:onClick="wechatLogin"
                    android:src="@drawable/wechat_login_btn" />
                <ImageView
                    android:id="@+id/weibo_login_view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:onClick="weboLogin"
                    android:padding="5dp"
                    android:src="@drawable/weibo_login_btn" />
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
