<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#00000000"
    android:id="@+id/pop_layout"
    android:layout_height="match_parent">
    <View
        android:id="@+id/open_slide_select_login_img"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/open_slide_login_btn"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/color_white"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/qq_login_view"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:src="@drawable/qq_login_btn" />
        <ImageView
            android:id="@+id/wechat_login_view"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/wechat_login_btn" />
        <ImageView
            android:id="@+id/weibo_login_view"
            android:layout_width="50dp"
            android:layout_marginLeft="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/weibo_login_btn" />
    </LinearLayout>
</LinearLayout>
